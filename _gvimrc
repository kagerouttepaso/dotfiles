" メニューが文字化けしてしまうことへの対策
gui
source $VIMRUNTIME/delmenu.vim
set langmenu=ja_jp.utf-8
source $VIMRUNTIME/menu.vim


"ソリューションのミーティング用設定
function! SolutionMT()
  set guifont=Hack:h21
  set transparency=255
  colorscheme zellner
  syntax off
endfunction
command! SolMt :call SolutionMT()

function! EndSolutionMT()
  set guifont=Hack:h13
  colorscheme jellybeans
  set transparency=220
  syntax on
endfunction
command! ESolMt :call EndSolutionMT()

"カラースキームの設定
"colorscheme yuroyoro256
"set transparency=214
"colorscheme hybrid
"set transparency=230

if neobundle#is_installed("jellybeans.vim")
  colorscheme jellybeans
endif

"半透明にして更にかっこよく
set transparency=220

"イカスフォントを使用する
set guifont=Hack:h13

"全角と半角のある文字は全角で表示
set ambiwidth=double

set novisualbell
if has("win32")
  set vb t_vb=
endi
if has("win64")
  set vb t_vb=
endi
